class Solution {
    public boolean check(int[] nums) {
        int c = 0;
        int n = nums.length;
        if(n==1) return true;
        for(int i=1; i<n; i++){
            if(nums[i]<nums[i-1]){
                c=i;
                break;
            }
        }

        if(nums[c]>nums[0]) return false;
        if(c==0) return true;
        for(int i=c+1; i<n; i++){
            if(nums[i]<nums[i-1] || nums[i]>nums[0]){
                return false;
            }
        }

        return true;
    }
}
