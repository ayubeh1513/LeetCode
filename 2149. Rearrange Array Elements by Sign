class Solution {
    public int[] rearrangeArray(int[] nums) {
        int len=nums.length;
        int ar[]=new int[len];
        int p=0;
        int n=1;
        for(int i:nums){
            if(i<0){
                ar[n]=i;
                n+=2;
            }
            else{
                ar[p]=i;
                p+=2;
            }
        }
        return ar;    
    }
}
